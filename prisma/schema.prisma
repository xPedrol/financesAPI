datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String?
  password  String?
  Expense   Expense[]
  Tag       Tag[]
  createdAt DateTime? @default(now())
}

model Tag {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  color       String
  description String
  Expense     Expense[]
  createdAt   DateTime? @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @db.ObjectId
}

model Expense {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  date        DateTime?
  tag         Tag       @relation(fields: [tagId], references: [id])
  tagId       String    @db.ObjectId
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @db.ObjectId
  description String?
  category    Category
}
enum Category {
  GAIN
  LOSS
}
